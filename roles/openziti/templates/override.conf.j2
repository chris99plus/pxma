[Service]

{% if openziti_edge_advertised_port <= 1024 %}
AmbientCapabilities=CAP_NET_BIND_SERVICE
{% endif %}

ExecStartPre=
ExecStartPre={{ openziti_opt }}/etc/controller/entrypoint.bash check {{ openziti_ctrl_home }}/config.yaml
ExecStart=
ExecStart={{ openziti_bin }}/ziti controller run {{ openziti_ctrl_home }}/config.yaml ${ZITI_ARGS}

